{
  "name": "sidcf-portal-workspace",
  "version": "2.0.0",
  "description": "SIDCF Portal - Workspace Root",
  "private": true,
  "scripts": {
    "lancer": "npm run dev",
    "dev": "concurrently --kill-others --names \"FRONT,WORKER\" -c \"bgBlue.bold,bgMagenta.bold\" \"npm run dev:front\" \"npm run dev:worker\"",
    "dev:front": "cd sidcf-portal && python3 -m http.server 7001",
    "dev:worker": "cd postgres/worker && npm run dev",
    "install:all": "cd postgres/worker && npm install",
    "deploy:worker": "cd postgres/worker && npm run deploy"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "pg": "^8.16.3"
  }
}
